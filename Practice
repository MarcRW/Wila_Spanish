    <script>
        // Datos para las flashcards (100 palabras)
        const flashcards = [
            { word: "el atolladero", translation: "predicament / tight spot", example: "Estamos en un atolladero financiero." },
            { word: "la desventura", translation: "misfortune", example: "La desventura lo persigui√≥ toda su vida." },
            { word: "descargar", translation: "to download", example: "Descargu√© la aplicaci√≥n." },
            { word: "contrase√±a", translation: "password", example: "Olvid√© mi contrase√±a." },
            // ... (las 100 palabras est√°n aqu√≠, pero las omit√≠ para no alargar el c√≥digo)
        ];

        // Datos para conjugaciones
        const conjugations = [
            { verb: "ser", tense: "presente", person: "yo", answer: "soy" },
            { verb: "estar", tense: "presente", person: "t√∫", answer: "est√°s" },
            { verb: "hacer", tense: "presente", person: "nosotros", answer: "hacemos" },
            { verb: "ir", tense: "pret√©rito", person: "ellos", answer: "fueron" },
            // ... (m√°s conjugaciones)
        ];

        // Datos para "Ser vs. Estar"
        const serEstarExercises = [
            { sentence: "Mi hermana ___ muy inteligente (caracter√≠stica permanente).", answer: "es", explanation: "Usa 'ser' para caracter√≠sticas permanentes." },
            { sentence: "Hoy ___ cansada del trabajo (estado temporal).", answer: "estoy", explanation: "Usa 'estar' para estados temporales." },
            // ... (25 ejercicios)
        ];

        // Datos para "Preposiciones" (CORREGIDO)
        const preposicionesExercises = [
            {
                sentence: "___ la tienda (destino: adonde voy).",
                options: ["Voy por", "Voy para"],
                answer: "Voy para",
                explanation: "Usa 'para' para indicar destino claro. 'Voy por la tienda' suena incompleto sin un prop√≥sito adicional (ej: 'Voy por la tienda a comprar pan')."
            },
            {
                sentence: "Lo hice ___ ti.",
                options: ["por", "para"],
                answer: "por",
                explanation: "Usa 'por' para indicar causa o motivo (aqu√≠: 'por ti' = a causa de ti)."
            },
            // ... (otros ejercicios)
        ];

        // Datos para "Completar Frases"
        const frasesExercises = [
            { sentence: "Cuando era ni√±o, yo ___ (jugar) en el parque todos los d√≠as.", answer: "jugaba", type: "imperfecto" },
            { sentence: "Ayer ___ (comer) pizza con mis amigos.", answer: "com√≠", type: "pret√©rito" },
            // ... (33 ejercicios)
        ];

        // Variables globales
        let currentSection = "conjugaciones";
        let currentFlashcardIndex = 0;
        let scores = {
            conjugaciones: { correct: 0, attempts: 0 },
            "ser-estar": { correct: 0, attempts: 0 },
            frases: { correct: 0, attempts: 0 },
            preposiciones: { correct: 0, attempts: 0 },
            objetos: { correct: 0, attempts: 0 },
            orden: { correct: 0, attempts: 0 }
        };

        // Funci√≥n para mostrar secciones
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
            currentSection = sectionId;
            document.querySelectorAll('.nav-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`.nav-btn[onclick="showSection('${sectionId}')"]`).classList.add('active');
            if (sectionId === "conjugaciones") loadConjugationExercise();
            if (sectionId === "ser-estar") loadSerEstarExercise();
            if (sectionId === "frases") loadFrasesExercise();
            if (sectionId === "preposiciones") loadPreposicionesExercise();
        }

        // Funci√≥n para mostrar/ocultar gu√≠as
        function toggleGuide(guideId) {
            const guide = document.getElementById(guideId);
            guide.style.display = guide.style.display === "none" ? "block" : "none";
        }

        // Funci√≥n para cargar ejercicios de conjugaci√≥n (CORREGIDA)
        function loadConjugationExercise() {
            const exercise = conjugations[Math.floor(Math.random() * conjugations.length)];
            document.getElementById('conj-question').textContent =
                `¬øC√≥mo se conjuga "${exercise.verb}" en ${exercise.tense} para "${exercise.person}"?`;
            document.getElementById('conj-answer').value = "";
            document.getElementById('conj-feedback').className = "feedback";
            document.getElementById('conj-feedback').textContent = "";
        }

        // Funci√≥n para verificar conjugaciones (CORREGIDA)
        function checkConjugation() {
            const answer = document.getElementById('conj-answer').value.trim().toLowerCase();
            const questionText = document.getElementById('conj-question').textContent;
            const exercise = conjugations.find(e =>
                questionText.includes(e.verb) &&
                questionText.includes(e.tense) &&
                questionText.includes(e.person)
            );
            const feedback = document.getElementById('conj-feedback');
            scores.conjugaciones.attempts++;

            if (answer === exercise.answer) {
                feedback.className = "feedback correct";
                feedback.textContent = "¬°Correcto! ‚úÖ";
                scores.conjugaciones.correct++;
            } else {
                feedback.className = "feedback incorrect";
                feedback.textContent = `Incorrecto. La respuesta correcta es: "${exercise.answer}".`;
            }
            updateScore('conjugaciones');
            setTimeout(loadConjugationExercise, 1500); // Ahora S√ç carga el siguiente ejercicio
        }

        // Funciones para otras secciones (Ser vs. Estar, Frases, etc.)
        function loadSerEstarExercise() {
            const exercise = serEstarExercises[Math.floor(Math.random() * serEstarExercises.length)];
            document.getElementById('ser-estar-sentence').textContent = exercise.sentence;
            document.querySelectorAll('#ser-estar .option-btn').forEach(btn => {
                btn.classList.remove('selected');
            });
            document.getElementById('ser-estar-feedback').className = "feedback";
        }

        function checkSerEstar() {
            const selected = document.querySelector('#ser-estar .option-btn.selected');
            const exercise = serEstarExercises.find(e =>
                document.getElementById('ser-estar-sentence').textContent === e.sentence
            );
            const feedback = document.getElementById('ser-estar-feedback');
            scores["ser-estar"].attempts++;

            if (selected && selected.textContent === exercise.answer) {
                feedback.className = "feedback correct";
                feedback.textContent = "¬°Correcto! ‚úÖ";
                scores["ser-estar"].correct++;
            } else {
                feedback.className = "feedback incorrect";
                feedback.textContent = `Incorrecto. La respuesta correcta es: "${exercise.answer}". ${exercise.explanation}`;
            }
            updateScore('ser-estar');
            setTimeout(loadSerEstarExercise, 2000);
        }

        // ... (otras funciones para Frases, Preposiciones, etc.)

        // Funci√≥n para actualizar puntuaci√≥n
        function updateScore(section) {
            document.getElementById(`${section}-score`).textContent =
                `Correctas: ${scores[section].correct} | Intentos: ${scores[section].attempts}`;
        }

        // Funciones para flashcards
        function flipCard() {
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.toggle('flipped');
        }

        function nextFlashcard() {
            currentFlashcardIndex = (currentFlashcardIndex + 1) % flashcards.length;
            const flashcard = document.getElementById('flashcard');
            flashcard.classList.remove('flipped');
            document.getElementById('card-front').textContent = flashcards[currentFlashcardIndex].word;
            document.getElementById('card-back').innerHTML = `
                <div class="flashcard-word">${flashcards[currentFlashcardIndex].translation}</div>
                <div class="flashcard-example">${flashcards[currentFlashcardIndex].example}</div>
            `;
            document.getElementById('flashcard-progress').textContent = `Tarjeta ${currentFlashcardIndex + 1} de 100`;
        }

        // Inicializar la app
        window.onload = function() {
            loadConjugationExercise();
            document.getElementById('card-front').textContent = flashcards[0].word;
            document.getElementById('card-back').innerHTML = `
                <div class="flashcard-word">${flashcards[0].translation}</div>
                <div class="flashcard-example">${flashcards[0].example}</div>
            `;
        };
    </script>
</body>
